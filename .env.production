# Production Environment Configuration

# Server Configuration
NODE_ENV=production
PORT=3001

# Domain Configuration
DOMAIN=hanh-io-company-limitedorg.org
SERVER_IP=150.95.109.182

# AI Models Service
AI_MODELS_URL=http://ai-models:8000

# Database Configuration (if using external database)
# MONGODB_URI=mongodb://mongo-cluster:27017/creator-ai-prod
# DATABASE_URL=postgresql://creator_user:secure_password@postgres-cluster:5432/creator_ai_prod

# File Storage Configuration
UPLOAD_DIR=/app/uploads
MAX_FILE_SIZE=104857600  # 100MB
MAX_FILES_PER_SESSION=10

# AI Service Configuration
STABLE_DIFFUSION_API_KEY=your_production_api_key_here
OPENAI_API_KEY=your_production_openai_key_here

# Security Configuration
JWT_SECRET=your_super_secure_jwt_secret_here_change_this_in_production
BCRYPT_ROUNDS=12
SESSION_SECRET=your_session_secret_here_change_this_in_production

# Logging Configuration
LOG_LEVEL=info
LOG_FILE=/app/logs/app.log

# SSL Configuration
SSL_CERT_PATH=/etc/ssl/certs/hanh-io-company-limitedorg.org.crt
SSL_KEY_PATH=/etc/ssl/private/hanh-io-company-limitedorg.org.key

# Performance Configuration
NODE_OPTIONS=--max-old-space-size=2048

# CORS Configuration
ALLOWED_ORIGINS=https://hanh-io-company-limitedorg.org,https://www.hanh-io-company-limitedorg.org

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000  # 15 minutes
RATE_LIMIT_MAX_REQUESTS=100

# Health Check Configuration
HEALTH_CHECK_INTERVAL=30000  # 30 seconds
HEALTH_CHECK_TIMEOUT=10000   # 10 seconds

# Monitoring Configuration
ENABLE_METRICS=true
METRICS_PORT=9090

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_SCHEDULE=0 2 * * *  # Daily at 2 AM
BACKUP_RETENTION_DAYS=30