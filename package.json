{
  "name": "creator-ai",
  "version": "1.0.0",
  "description": "AI-powered video content creation tool for offline use",
  "main": "src/main.js",
  "homepage": "https://github.com/hanh-io-company-limited/creator-ai",
  "author": "Hanh IO Company Limited",
  "license": "CC-BY-ND-4.0",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "api": "node src/api/server.js",
    "dev-api": "nodemon src/api/server.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --linux --mac",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps",
    "docker:build": "docker build -t creator-ai .",
    "docker:run": "docker run -p 3000:3000 creator-ai",
    "deploy:local": "node scripts/deploy-local.js"
  },
  "keywords": [
    "ai",
    "video",
    "content-creation",
    "machine-learning",
    "desktop",
    "offline"
  ],
  "dependencies": {
    "electron-store": "^8.1.0",
    "@tensorflow/tfjs": "^4.10.0",
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^2.0.1",
    "wav-encoder": "^1.3.0",
    "wav-decoder": "^1.3.0",
    "uuid": "^9.0.0",
    "axios": "^1.5.0"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.6.2",
    "supertest": "^6.3.3",
    "@jest/globals": "^29.6.2",
    "nodemon": "^3.0.1"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Creator AI"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js",
      "!src/renderer.js"
    ],
    "coverageDirectory": "coverage",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ]
  }
}