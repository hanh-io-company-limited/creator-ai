{
  "name": "creator-ai",
  "version": "1.0.0",
  "description": "AI-powered video content creation tool with multi-chain NFT minting capabilities",
  "main": "src/main.js",
  "homepage": "https://hanh-io.com",
  "author": "Hanh IO Company Limited",
  "license": "PROPRIETARY",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --linux --mac",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps"
  },
  "keywords": [
    "ai",
    "video",
    "content-creation",
    "machine-learning",
    "desktop",
    "offline",
    "nft",
    "blockchain",
    "ethereum",
    "solana",
    "multi-chain"
  ],
  "dependencies": {
    "electron-store": "^8.1.0",
    "web3": "^4.3.0",
    "@solana/web3.js": "^1.87.6",
    "@solana/wallet-adapter-base": "^0.9.23",
    "@solana/wallet-adapter-phantom": "^0.9.24",
    "@metaplex-foundation/js": "^0.19.4",
    "ethers": "^6.8.1"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Creator AI"
    }
  }
}