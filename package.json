{
  "name": "creator-ai",
  "version": "1.0.0",
  "description": "AI-powered video content creation tool for offline use",
  "main": "src/main.js",
  "homepage": "https://hanh-io.com",
  "author": "Hanh IO Company Limited",
  "license": "PROPRIETARY",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --linux --mac",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps",
    "hardhat:compile": "hardhat compile",
    "hardhat:test": "hardhat test",
    "hardhat:node": "hardhat node",
    "deploy:local": "hardhat run scripts/deploy.js --network localhost",
    "deploy:sepolia": "hardhat run scripts/deploy.js --network sepolia",
    "nft:dev": "cd nft-frontend && npm start",
    "nft:build": "cd nft-frontend && npm run build",
    "nft:install": "cd nft-frontend && npm install"
  },
  "keywords": [
    "ai",
    "video",
    "content-creation",
    "machine-learning",
    "desktop",
    "offline"
  ],
  "dependencies": {
    "electron-store": "^8.1.0",
    "@nomicfoundation/hardhat-toolbox": "^4.0.0",
    "@openzeppelin/contracts": "^5.0.0",
    "hardhat": "^2.19.0",
    "dotenv": "^16.3.0"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Creator AI"
    }
  }
}