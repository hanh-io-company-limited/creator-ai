{
  "name": "creator-ai",
  "version": "1.0.0",
  "description": "AI-powered video content creation tool for offline use",
  "main": "src/main.js",
  "homepage": "https://hanh-io.com",
  "author": "Hanh IO Company Limited",
  "license": "PROPRIETARY",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --linux --mac",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps",
    "docker:build": "docker build -t creator-ai .",
    "docker:run": "docker run -p 3000:3000 creator-ai",
    "docker:compose:up": "docker-compose up -d",
    "docker:compose:down": "docker-compose down",
    "deploy:dev": "./scripts/deploy.sh development",
    "deploy:staging": "./scripts/deploy.sh staging",
    "deploy:prod": "./scripts/deploy.sh production",
    "test": "./scripts/test.sh",
    "test:quick": "./scripts/test.sh --quick",
    "test:integration": "./scripts/integration-test.sh",
    "health-check": "curl -f http://localhost:3000/health || exit 1"
  },
  "keywords": [
    "ai",
    "video",
    "content-creation",
    "machine-learning",
    "desktop",
    "offline"
  ],
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Creator AI"
    }
  }
}