{
  "name": "creator-ai",
  "version": "1.0.0",
  "description": "AI-powered video content creation tool for offline use",
  "main": "src/main.js",
  "homepage": "https://hanh-io.com",
  "author": "Hanh IO Company Limited",
  "license": "PROPRIETARY",
  "scripts": {
    "start": "electron .",
    "dev": "electron . --dev",
    "build": "electron-builder",
    "build:win": "electron-builder --win",
    "build:all": "electron-builder --win --linux --mac",
    "dist": "npm run build:win",
    "postinstall": "electron-builder install-app-deps",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:unit": "jest tests/unit",
    "test:integration": "jest tests/integration",
    "test:comprehensive": "jest tests/integration/comprehensive.test.js"
  },
  "keywords": [
    "ai",
    "video",
    "content-creation",
    "machine-learning",
    "desktop",
    "offline"
  ],
  "dependencies": {
    "electron-store": "^8.1.0"
  },
  "devDependencies": {
    "@types/jest": "^29.5.5",
    "electron": "^27.1.0",
    "electron-builder": "^24.6.4",
    "jest": "^29.7.0",
    "jsdom": "^22.1.0"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "dist"
    },
    "files": [
      "src/**/*",
      "assets/**/*",
      "node_modules/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis",
      "icon": "assets/icon.png",
      "requestedExecutionLevel": "asInvoker",
      "artifactName": "${productName}-${version}-Setup.${ext}",
      "forceCodeSigning": false
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true,
      "shortcutName": "Creator AI"
    }
  },
  "jest": {
    "testEnvironment": "node",
    "testMatch": [
      "**/tests/**/*.test.js",
      "**/tests/**/*.spec.js"
    ],
    "collectCoverageFrom": [
      "src/**/*.js",
      "!src/main.js"
    ],
    "coverageDirectory": "coverage",
    "coverageReporters": [
      "text",
      "lcov",
      "html"
    ],
    "testTimeout": 15000
  }
}
