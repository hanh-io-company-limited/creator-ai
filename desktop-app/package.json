{
  "name": "creator-ai-desktop",
  "version": "1.0.0",
  "description": "Creator AI Desktop - Standalone Windows Application for AI Avatar and Video Creation",
  "main": "dist/main.js",
  "homepage": "./",
  "scripts": {
    "dev": "concurrently \"npm run dev:electron\" \"npm run dev:backend\"",
    "dev:electron": "electron .",
    "dev:backend": "nodemon src/backend/server.ts",
    "build": "npm run build:backend && npm run build:frontend && npm run build:electron",
    "build:backend": "tsc -p tsconfig.backend.json",
    "build:frontend": "cd ../frontend && npm run build",
    "build:electron": "electron-builder",
    "pack": "electron-builder --dir",
    "dist": "electron-builder",
    "dist:win": "electron-builder --win"
  },
  "keywords": ["ai", "avatar", "video", "creator", "desktop", "electron", "windows"],
  "author": "Hanh IO Company Limited",
  "license": "Apache-2.0",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "multer": "^1.4.4",
    "uuid": "^9.0.0",
    "jimp": "^0.22.10",
    "node-fetch": "^3.3.2"
  },
  "devDependencies": {
    "electron": "^27.0.0",
    "electron-builder": "^24.6.4",
    "concurrently": "^8.2.0",
    "nodemon": "^3.0.1",
    "typescript": "^5.1.6",
    "ts-node": "^10.9.1",
    "@types/express": "^4.17.17",
    "@types/multer": "^1.4.7",
    "@types/cors": "^2.8.13",
    "@types/uuid": "^9.0.2",
    "@types/node": "^20.5.0"
  },
  "build": {
    "appId": "com.hanh-io.creator-ai",
    "productName": "Creator AI",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "frontend-build/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "win": {
      "target": [
        {
          "target": "nsis",
          "arch": ["x64"]
        }
      ],
      "icon": "assets/icon.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true,
      "createDesktopShortcut": true,
      "createStartMenuShortcut": true
    }
  }
}