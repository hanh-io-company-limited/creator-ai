# =============================================================================
# Creator AI - Environment Configuration Example
# =============================================================================
# Copy this file to .env and modify the values according to your environment
# DO NOT commit the actual .env file to version control

# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------

# Node.js environment (development, production, test)
NODE_ENV=production

# Application port (default: 3000)
PORT=3000

# Application log level (error, warn, info, debug)
LOG_LEVEL=info

# -----------------------------------------------------------------------------
# AI Engine Configuration
# -----------------------------------------------------------------------------

# Enable GPU acceleration (true, false)
GPU_ACCELERATION=false

# Maximum memory usage in GB
MAX_MEMORY=4

# Model complexity level (low, medium, high)
MODEL_COMPLEXITY=medium

# Default output directory for generated content
OUTPUT_DIRECTORY=/app/data/output

# Default model storage directory
MODEL_DIRECTORY=/app/models

# -----------------------------------------------------------------------------
# Docker Configuration
# -----------------------------------------------------------------------------

# Container memory limit (e.g., 2G, 4G, 8G)
MEMORY_LIMIT=4G

# Container CPU limit (e.g., 1.0, 2.0, 4.0)
CPU_LIMIT=2.0

# Container memory reservation
MEMORY_RESERVATION=2G

# Container CPU reservation
CPU_RESERVATION=1.0

# -----------------------------------------------------------------------------
# Database Configuration (if using external services)
# -----------------------------------------------------------------------------

# Redis configuration
REDIS_HOST=redis
REDIS_PORT=6379
REDIS_PASSWORD=

# Database URL (if using external database)
DATABASE_URL=

# -----------------------------------------------------------------------------
# Security Configuration
# -----------------------------------------------------------------------------

# JWT secret for authentication (generate a secure random string)
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production

# Session secret for session management
SESSION_SECRET=your-super-secret-session-key-change-this-too

# CORS allowed origins (comma-separated)
CORS_ORIGINS=http://localhost:3000,https://yourdomain.com

# -----------------------------------------------------------------------------
# SSL/TLS Configuration
# -----------------------------------------------------------------------------

# Enable HTTPS (true, false)
HTTPS_ENABLED=false

# SSL certificate path
SSL_CERT_PATH=/etc/nginx/ssl/cert.pem

# SSL private key path
SSL_KEY_PATH=/etc/nginx/ssl/private.key

# -----------------------------------------------------------------------------
# External Services Configuration
# -----------------------------------------------------------------------------

# Cloud storage configuration (AWS S3, Google Cloud Storage, etc.)
CLOUD_STORAGE_PROVIDER=
CLOUD_STORAGE_BUCKET=
CLOUD_STORAGE_REGION=
CLOUD_STORAGE_ACCESS_KEY=
CLOUD_STORAGE_SECRET_KEY=

# Email service configuration (for notifications)
SMTP_HOST=
SMTP_PORT=587
SMTP_USER=
SMTP_PASSWORD=
SMTP_FROM_EMAIL=noreply@yourdomain.com

# -----------------------------------------------------------------------------
# Monitoring and Analytics
# -----------------------------------------------------------------------------

# Enable application monitoring
MONITORING_ENABLED=false

# Analytics service configuration
ANALYTICS_TRACKING_ID=

# Error tracking service
ERROR_TRACKING_DSN=

# -----------------------------------------------------------------------------
# Feature Flags
# -----------------------------------------------------------------------------

# Enable experimental features
EXPERIMENTAL_FEATURES=false

# Enable batch processing
BATCH_PROCESSING=true

# Enable API access
API_ENABLED=true

# Enable web interface
WEB_INTERFACE=true

# -----------------------------------------------------------------------------
# Performance Tuning
# -----------------------------------------------------------------------------

# Maximum concurrent jobs
MAX_CONCURRENT_JOBS=2

# Request timeout in milliseconds
REQUEST_TIMEOUT=300000

# File upload size limit in MB
UPLOAD_SIZE_LIMIT=100

# Video processing quality (low, medium, high, ultra)
VIDEO_QUALITY=medium

# Cache TTL in seconds
CACHE_TTL=3600

# -----------------------------------------------------------------------------
# Development Configuration
# -----------------------------------------------------------------------------

# Enable development tools (only for development)
DEV_TOOLS=false

# Enable hot reloading (only for development)
HOT_RELOAD=false

# Enable verbose logging (only for development)
VERBOSE_LOGGING=false