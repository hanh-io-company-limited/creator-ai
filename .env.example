# Cấu hình cho Creator AI System
# Sao chép file này thành .env và điền thông tin thực tế

# Cấu hình server
PORT=3000
NODE_ENV=development
DOMAIN=hanh-io-company-limitedorg.org

# Cấu hình bảo mật
JWT_SECRET=your-super-secret-jwt-key-here
SESSION_SECRET=your-session-secret-here
BCRYPT_ROUNDS=12

# Cấu hình AI Models
# OpenAI/GPT Configuration
OPENAI_API_KEY=your-openai-api-key
OPENAI_MODEL=gpt-3.5-turbo

# Stable Diffusion Configuration (có thể dùng local hoặc API)
STABLE_DIFFUSION_API_URL=http://localhost:7860
STABLE_DIFFUSION_API_KEY=optional-api-key

# Whisper Configuration (có thể dùng local hoặc OpenAI)
WHISPER_API_URL=http://localhost:8080
WHISPER_MODEL=base

# Cấu hình database (nếu cần)
DATABASE_URL=sqlite:./data/creator-ai.db

# Cấu hình file upload
MAX_FILE_SIZE=50MB
UPLOAD_PATH=./uploads

# Cấu hình rate limiting
RATE_LIMIT_WINDOW=15
RATE_LIMIT_MAX_REQUESTS=100

# Cấu hình CORS
ALLOWED_ORIGINS=http://localhost:3000,https://hanh-io-company-limitedorg.org